{
    "name": "order-processing/web-app",
    "description": "Order Processing and Dispatch Management System",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "vlucas/phpdotenv": "^5.5",
        "phpoffice/phpspreadsheet": "^1.29",
        "phpoffice/phpword": "^1.2",
        "tecnickcom/tcpdf": "^6.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php scripts/migrate.php",
        "seed": "php scripts/seed.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}


